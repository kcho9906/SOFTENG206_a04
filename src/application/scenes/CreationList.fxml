<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../../cyanBlueGreyPalette.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CreationListController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #FFC107;">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <ImageView fitHeight="155.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../componentImages/gradHat.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                           <children>
                              <ImageView fitHeight="130.0" fitWidth="69.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../componentImages/creationList.png" />
                                 </image>
                              </ImageView>
                              <Label text="Existing Creations">
                                 <font>
                                    <Font name="Abel Regular" size="30.0" />
                                 </font>
                              </Label>
                           </children>
                           <HBox.margin>
                              <Insets right="180.0" />
                           </HBox.margin>
                        </HBox>
                     </children>
                  </HBox>
                <Button fx:id="menuButton" mnemonicParsing="false" onAction="#returnToMenu">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../componentImages/menu.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <TableView fx:id="creationTableView" prefHeight="400.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Creation Name" />
                <TableColumn fx:id="searchTermColumn" prefWidth="75.0" text="Keyword" />
                  <TableColumn fx:id="durationColumn" prefWidth="75.0" text="Duration" />
                  <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Time Created" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="800.0" VBox.vgrow="NEVER">
               <children>
                  <ButtonBar prefHeight="50.0" prefWidth="393.0">
                    <buttons>
                        <Button fx:id="playButton" contentDisplay="RIGHT" minHeight="50.0" mnemonicParsing="false" onAction="#playCreation" prefWidth="175.0" text="Play">
                           <graphic>
                              <ImageView fitHeight="71.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../componentImages/play.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                        <Button fx:id="deleteButton" contentDisplay="RIGHT" minHeight="50.0" mnemonicParsing="false" onAction="#deleteCreation" text="Delete">
                           <graphic>
                              <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../componentImages/delete.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                        <Button fx:id="quizButton" contentDisplay="RIGHT" minHeight="50.0" mnemonicParsing="false" onAction="#quizCreation" text="Quiz">
                           <graphic>
                              <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../componentImages/gradHat.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                    </buttons>
                  </ButtonBar>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
