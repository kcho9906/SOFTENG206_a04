<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CreationListController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TableView fx:id="creationTableView" prefHeight="400.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Creation Name" />
                <TableColumn fx:id="searchTermColumn" prefWidth="75.0" text="Keyword" />
                  <TableColumn fx:id="durationColumn" prefWidth="75.0" text="Duration" />
                  <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Time Created" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="playButton" mnemonicParsing="false" onAction="#playCreation" text="Play" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteCreation" text="Delete" />
                        <Button fx:id="quizButton" mnemonicParsing="false" onAction="#quizCreation" text="Quiz" />
                    </buttons>
                  </ButtonBar>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                      <Button fx:id="menuButton" mnemonicParsing="false" onAction="#returnToMenu" text="Main Menu" />
                    </buttons>
                  </ButtonBar>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
